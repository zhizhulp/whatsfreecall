<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ads_plugin_native_ad_unit"
    android:layout_width="320dp"
    android:layout_height="150dp"
    android:background="@android:color/white"
    android:orientation="vertical">

    <View
        android:id="@+id/ads_plugin_ignore_btn"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <FrameLayout
        android:id="@+id/ads_plugin_ll_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.facebook.ads.MediaView
            android:id="@+id/ads_plugin_native_ad_media"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center" />
        <ImageView
            android:id="@+id/ads_plugin_native_ad_cover_image"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center" />
        <LinearLayout
            android:id="@+id/ads_plugin_ad_choices_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal" />

        <ImageView
            android:src="@drawable/adsplugin_ic_ad"
            android:layout_width="20dp"
            android:layout_height="20dp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/ads_plugin_native_ad_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:paddingRight="5dp"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/ads_plugin_native_ad_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:textColor="@android:color/black"
                android:textSize="12sp" />
        </LinearLayout>

        <Button
            android:id="@+id/ads_plugin_native_ad_call_to_action"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="#4286F4"
            android:gravity="center"
            android:lines="1"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textColor="@android:color/white"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>
