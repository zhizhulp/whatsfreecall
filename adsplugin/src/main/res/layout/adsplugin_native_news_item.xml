<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="4dp"
    android:paddingLeft="4dp"
    android:paddingStart="4dp"
    android:paddingRight="4dp"
    android:paddingEnd="4dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/ads_plugin_newsItem"
        android:background="@drawable/adsplugin_news_item_background"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/ads_plugin_news_pic"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <TextView
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@android:color/black"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@+id/ads_plugin_news_pic"
            android:layout_toEndOf="@+id/ads_plugin_news_pic"
            android:id="@+id/news_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="#888"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@id/news_title"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/ads_plugin_news_pic"
            android:layout_toRightOf="@+id/ads_plugin_news_pic"
            android:id="@+id/news_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/adsplugin_news_item_background"
        android:id="@+id/adItem"
        android:layout_width="match_parent"
        android:layout_height="150dp">

    </RelativeLayout>
</LinearLayout>