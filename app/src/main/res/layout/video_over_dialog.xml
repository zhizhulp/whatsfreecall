<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_video_click"
            android:layout_width="120dp"
            android:layout_height="86dp"
            android:visibility="visible"
            android:layout_marginTop="10dp"
            android:src="@drawable/video_click_double" />
        <ImageView
            android:id="@+id/iv_video_click_un"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:src="@drawable/many_money" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_show_balance_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="balance"
        android:textColor="@color/text_check_in_dialog"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_over"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_yellow_shape"
        android:text="@string/ok"
        android:textColor="@color/white"
        android:textSize="22sp" />

</LinearLayout>