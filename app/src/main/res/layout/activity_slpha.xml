<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.baisi.whatsfreecall.ui.activity.SplashActivity">

    <FrameLayout
        android:id="@+id/fl_slpha_ads"
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:layout_height="0dp"></FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="60dp"
                android:src="@mipmap/ic_launcher"
                android:layout_height="60dp" />
            <TextView
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/nav_text_color"
                android:text="@string/app_name"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="Call anyone around the world anytime and anywhere"
            android:textColor="@color/item_text_two"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
